

<h2>Albums by <%= @band.name %></h2>

    <% @band.albums.each do |album| %>
        <a href="<%= album_url(album) %>">
            <p class="info"><%= album.title %></p>
        </a>
    <% end %>

<h3>Options</h3>
<div class="bucket">
    <form action="<%= new_band_album_url(@band.id) %>" method="GET">
        <%= auth_token %>

        <input type="hidden" name="band_id" value=" <%= @band.id %>">
        <input type="submit" value="New Album"  class="button">
    </form>

    <form action="<%= band_url %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <%= auth_token %>
        <input type="submit" value="Disband"  class="button">
    </form>

    <form action="<%= edit_band_url(@band) %>" method="GET">
        <%= auth_token %>
        <input type="submit" value="Edit"  class="button">
    </form>
</div>