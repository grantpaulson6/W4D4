
<form action="<%= method == :POST ? albums_url : album_url(album) %>" method="POST">
    <input type="hidden" name="_method" value="<%= method %>">

    <%= auth_token %>

    <label>Enter Album Title:
        <input type="text" name="album[title]" value="<%= album.title %>">
    </label>

    <label>Enter Year Made:
        <input type="number" name="album[year]" value="<%= album.year %>">
    </label>

    <select name="album[band_id]">
        <% Band.all.each do |band| %>
            <option value="<%= band.id %>" <%= band.id == album.band_id ? "selected" : "" %> ><%= band.name %></option>
        <% end %>
    </select>

    <input type="submit" value="makin music!">

    <% if !flash.empty? %>
        <% flash.keys.each do |k| %>
            <%= flash[k] %>
        <% end %>
    <% end %>
</form>